{
	"name": "learn-hono1",
	"description": "Hono v4 example project #1",
	"version": "0.0.0-alpha.0",
	"type": "module",
	"bin": {
		"learn-hono1": "dist/index.mjs"
	},
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsdown",
		"preview": "node ./dist/index.mjs",
		"format": "biome format --write .",
		"format:all": "biome format --write . && dprint fmt",
		"lint": "biome lint .",
		"test": "vitest run",
		"ex1": "curl localhost:3000 && echo",
		"ex2": "curl localhost:3000/api/hello",
		"ex3": "curl localhost:3000/posts/1",
		"ex4": "curl localhost:3000/posts/2",
		"ex5": "curl -X POST localhost:3000/posts",
		"ex6": "curl -X DELETE localhost:3000/posts/1",
		"ex7": "curl localhost:3000/page",
		"ex8": "curl localhost:3000/raw",
		"smoke-test": "run-p --max-parallel 2 ex1 ex2 ex3 ex4 ex5 ex6 ex7 ex8",
		"test:e2e:test": "playwright test",
		"test:e2e:show-report": "playwright show-report",
		"test:e2e": "run-s test:e2e:test test:e2e:show-report"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/heiwa4126/learn-hono1.git"
	},
	"bugs": {
		"url": "https://github.com/heiwa4126/learn-hono1/issues"
	},
	"homepage": "https://github.com/heiwa4126/learn-hono1#readme",
	"license": "MIT",
	"files": [
		"dist/**/*.js",
		"dist/**/*.mjs",
		"dist/**/*.cjs",
		"dist/**/*.d.ts",
		"!dist/**/*.map"
	],
	"dependencies": {
		"@hono/node-server": "^1.19.7",
		"@hono/zod-validator": "^0.7.6",
		"hono": "^4.11.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@playwright/test": "^1.57.0",
		"@types/node": "^25.0.3",
		"npm-run-all2": "^8.0.4",
		"tsdown": "0.19.0-beta.5",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16",
		"zod": "^4.3.5"
	}
}
